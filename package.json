{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "template for ts node project with testing and linting",
  "license": "MIT",
  "author": "Niral <niral@niralmehta.org>",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src ./test --fix --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky install",
    "serve": "ts-node -r dotenv/config src",
    "test": "jest --coverage --logHeapUsage --runInBand",
    "test:coverage": "yarn test --coverage --passWithNoTests",
    "watch": "nodemon"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "yup": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "commitlint": "^17.6.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": "^18"
  }
}

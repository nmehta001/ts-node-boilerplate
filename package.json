{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "template for ts node project with testing and linting",
  "license": "MIT",
  "author": "Niral <niral@niralmehta.org>",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src ./test --fix --ext .js,.jsx,.ts,.tsx",
    "serve": "ts-node -r dotenv/config src",
    "prepare": "husky install",
    "test": "jest --coverage --logHeapUsage --runInBand",
    "test:coverage": "yarn test --coverage --passWithNoTests",
    "watch": "nodemon"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "commitlint": "^17.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.1",
    "husky": "^7.0.4",
    "jest": "^29.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "yup": "^1.0.0-beta.2"
  }
}
